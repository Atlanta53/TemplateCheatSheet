\setlength{\columnsep}{0.3cm}

\newcommand{\size}{\small}
\AtBeginEnvironment{Text}{\size}


%%%% Definition of the text block %%%%
\newenvironment{Text}[1]{
	\tcolorbox[
	noparskip,
	breakable,
	height fixed for=first and middle,
	left=1.5mm, right=1.5mm, top=1.5mm, bottom=1.5mm,
	colframe=\mainColor,
	colback=\colorAttenuation,
	coltext=\colorText,
	arc=0mm,
	adjusted title=\n,
	fonttitle=\bfseries,
	title=#1]}
{\endtcolorbox}

%%%% Definition of the Note block %%%%

\newenvironment{Note}[1]{
	\tcolorbox[attach title to upper,
	after title={\ :\ },
	breakable,
	height fixed for=first and middle,
	left=1.5mm, right=1.5mm, top=1.5mm, bottom=1.5mm,
	colback=\mainColor,
	colframe=\mainColor,
	sharp corners=northwest,
	arc=1mm,
	adjusted title=\n,
	coltext=white,
	fonttitle=\bfseries,
	title=#1]}
{\endtcolorbox}

%%%% Definition of the important block %%%%

\newenvironment{Important}[1]{
	\tcolorbox[attach title to upper,
	after title={\ :\ },
	breakable,
	height fixed for=first and middle,
	left=1.5mm, right=1.5mm, top=1.5mm, bottom=1.5mm,
	colback=red!80,
	colframe=red!80,
	sharp corners=northwest,
	arc=1mm,
	adjusted title=\n,
	coltext=white,
	fonttitle=\bfseries,
	title=#1]}
{\endtcolorbox}

